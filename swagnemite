<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Simple markers</title>
    <style>
      html, body, #map-canvas {
        height: 100%;
        margin: 0px;
        padding: 0px
      }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>

    <script>
function initialize() {
var longitudes = new Array(1,50,60,70);
var lattitudes = new Array(1,50,60,70);
var map;
var marker;
var myLatlng;
var mapOptions;

for(i= 0; i < longitudes.length-1; i++) 
{
	myLatlng = new google.maps.LatLng(longitudes[i],lattitudes[i]);
	mapOptions = {zoom: 1, center: myLatlng};
  	map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
	marker = new google.maps.Marker({ position: myLatlng, map: map, title: 'Hello World!'});
}
    </script>
  </head>
  <body>
    <div id="map-canvas"></div>
  </body>
</html>
